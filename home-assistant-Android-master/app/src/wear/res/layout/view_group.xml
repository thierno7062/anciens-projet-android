        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/item_padding"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="?colorAccent"
        android:textSize="12sp" />
</LinearLayout>