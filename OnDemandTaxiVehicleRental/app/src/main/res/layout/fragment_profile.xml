<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.projets.heven.taxijaune.fragment.FragmentProfile"
    android:orientation="vertical"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center|left">

            <ImageView
                android:layout_marginLeft="10dp"
                android:padding="17dp"
                android:tint="@color/colorYelloDark"
                app:srcCompat="@drawable/ic_profile_outline"
                android:layout_width="65dp"
                android:layout_height="65dp"/>

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:gravity="center|left"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center|left">

                    <TextView
                        android:singleLine="true"
                        android:textSize="16sp"
                        android:textColor="@color/colorBlack"
                        android:gravity="center|left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nom" />

                    <TextView
                        android:singleLine="true"
                        android:gravity="center|left"
                        android:id="@+id/input_nom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/woumtana" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/edit_nom"
                    android:layout_marginLeft="10dp"
                    android:padding="7dp"
                    app:srcCompat="@drawable/ic_edit_outline"
                    android:tint="@color/colorYelloDark"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_marginRight="10dp"
            android:layout_marginLeft="80dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/linear"
            android:background="#e2e2e2"/>

        <LinearLayout
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center|left">

            <ImageView
                android:layout_marginLeft="10dp"
                android:padding="17dp"
                android:tint="@color/colorYelloDark"
                app:srcCompat="@drawable/ic_profile_outline"
                android:layout_width="65dp"
                android:layout_height="65dp"/>

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:gravity="center|left"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center|left">

                    <TextView
                        android:singleLine="true"
                        android:textSize="16sp"
                        android:textColor="@color/colorBlack"
                        android:gravity="center|left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pr_nom" />

                    <TextView
                        android:singleLine="true"
                        android:gravity="center|left"
                        android:id="@+id/input_prenom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pingdiwind_youssouf" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/edit_prenom"
                    android:layout_marginLeft="10dp"
                    android:padding="7dp"
                    app:srcCompat="@drawable/ic_edit_outline"
                    android:tint="@color/colorYelloDark"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_marginRight="10dp"
            android:layout_marginLeft="80dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/linear"
            android:background="#e2e2e2"/>

        <LinearLayout
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center|left">

            <ImageView
                android:layout_marginLeft="10dp"
                android:padding="17dp"
                android:tint="@color/colorYelloDark"
                app:srcCompat="@drawable/ic_phone_outline"
                android:layout_width="65dp"
                android:layout_height="65dp"/>

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:gravity="center|left"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center|left">

                    <TextView
                        android:singleLine="true"
                        android:textSize="16sp"
                        android:textColor="@color/colorBlack"
                        android:gravity="center|left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/t_l_phone" />

                    <TextView
                        android:singleLine="true"
                        android:gravity="center|left"
                        android:id="@+id/input_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_226_63_86_22_46" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/edit_phone"
                    android:layout_marginLeft="10dp"
                    android:padding="7dp"
                    app:srcCompat="@drawable/ic_edit_outline"
                    android:tint="@color/colorYelloDark"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_marginRight="10dp"
            android:layout_marginLeft="80dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/linear"
            android:background="#e2e2e2"/>

        <LinearLayout
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center|left">

            <ImageView
                android:layout_marginLeft="10dp"
                android:padding="17dp"
                android:tint="@color/colorYelloDark"
                app:srcCompat="@drawable/ic_message_outline"
                android:layout_width="65dp"
                android:layout_height="65dp"/>

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:gravity="center|left"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center|left">

                    <TextView
                        android:singleLine="true"
                        android:textSize="16sp"
                        android:textColor="@color/colorBlack"
                        android:gravity="center|left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email" />

                    <TextView
                        android:singleLine="true"
                        android:gravity="center|left"
                        android:id="@+id/input_mail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/issoufwoumtana_gmail_com" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/edit_mail"
                    android:layout_marginLeft="10dp"
                    android:padding="7dp"
                    app:srcCompat="@drawable/ic_edit_outline"
                    android:tint="@color/colorYelloDark"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_marginRight="10dp"
            android:layout_marginLeft="80dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/linear"
            android:background="#e2e2e2"/>

        <LinearLayout
            android:background="?android:selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center|left">

            <ImageView
                android:layout_marginLeft="10dp"
                android:padding="17dp"
                android:tint="@color/colorYelloDark"
                app:srcCompat="@drawable/ic_password_outline"
                android:layout_width="65dp"
                android:layout_height="65dp"/>

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:gravity="center|left"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center|left">

                    <TextView
                        android:id="@+id/mdp"
                        android:singleLine="true"
                        android:textSize="16sp"
                        android:textColor="@color/colorBlack"
                        android:gravity="center|left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mot_de_passe" />

                    <TextView
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:gravity="center|left"
                        android:id="@+id/input_mdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_12345678" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/edit_mdp"
                    android:layout_marginLeft="10dp"
                    android:padding="7dp"
                    app:srcCompat="@drawable/ic_edit_outline"
                    android:tint="@color/colorYelloDark"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_marginRight="10dp"
            android:layout_marginLeft="80dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/linear"
            android:background="#e2e2e2"/>
    </LinearLayout>

</LinearLayout>