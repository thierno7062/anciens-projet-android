<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:elevation="2dp"
            android:background="@drawable/shape_bg_incoming_bubble"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="7dp"
            android:paddingLeft="23dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:id="@+id/linear">

            <LinearLayout
                android:paddingRight="0dp"
                android:layout_marginLeft="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:visibility="gone"
                    android:layout_weight="3.33"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:gravity="bottom|left"
                            android:id="@+id/user_name_message"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Woumtana youssouf"
                            android:textSize="18sp"
                            android:textColor="@color/colorBlack"
                            android:textStyle="normal"
                            android:singleLine="true"/>
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_weight="3.33"
                    android:orientation="horizontal"
                    android:gravity="center|right|bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_weight="2.5"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp"
                            android:gravity="bottom|left"
                            android:text="d'un conducteur"
                            android:ellipsize="end"
                            android:layout_weight="1"
                            android:id="@+id/desc_message"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_gravity="right"
                    android:layout_marginTop="7dp"
                    android:visibility="visible"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:orientation="horizontal">

                    <TextView
                        android:textSize="12sp"
                        android:singleLine="true"
                        android:text="25 Sep. 2019"
                        android:gravity="right|bottom"
                        android:id="@+id/date_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <!--<View-->
            <!--android:visibility="visible"-->
            <!--android:id="@+id/line_divider"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0.5dp"-->
            <!--android:layout_below="@+id/linear"-->
            <!--android:background="#e2e2e2"/>-->
    </RelativeLayout>

    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/relativeLayout_current"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_bg_outgoing_bubble"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="23dp"
            android:paddingLeft="7dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp">

            <LinearLayout
                android:paddingRight="0dp"
                android:layout_marginLeft="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:visibility="gone"
                    android:layout_weight="3.33"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_alignParentRight="true"
                        android:gravity="bottom|right"
                        android:id="@+id/user_name_message_current"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Woumtana youssouf"
                        android:textSize="18sp"
                        android:textColor="@color/colorBlack"
                        android:textStyle="normal"
                        android:singleLine="true"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_weight="3.33"
                    android:orientation="horizontal"
                    android:gravity="center|right|bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_weight="2.5"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp"
                            android:ellipsize="end"
                            android:gravity="bottom|left"
                            android:text="age d'un conducteur"
                            android:layout_weight="1"
                            android:id="@+id/desc_message_current"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="7dp"
                    android:layout_gravity="right"
                    android:visibility="visible"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:orientation="horizontal">

                    <TextView
                        android:textSize="12sp"
                        android:singleLine="true"
                        android:text="25 Sep. 2019 Ã  09:30"
                        android:gravity="right|bottom"
                        android:id="@+id/date_message_current"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <!--<View-->
            <!--android:visibility="visible"-->
            <!--android:id="@+id/line_divider_current"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="0.5dp"-->
            <!--android:layout_below="@+id/linear_current"-->
            <!--android:background="#e2e2e2"/>-->
    </RelativeLayout>
</RelativeLayout>