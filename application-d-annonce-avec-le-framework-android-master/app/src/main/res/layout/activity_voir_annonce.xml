<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageViewActivity" >
    <include layout="@layout/toolbar"
        android:id="@+id/toolbarVA"/>
    <ScrollView
        android:layout_below="@+id/toolbarVA"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/contacter"
                android:layout_alignStart="@+id/contacter"
                android:layout_below="@+id/contacter"
                android:text="textview"
                android:textSize="20dp"
                android:textStyle="bold" />
            <TextView

                android:id="@+id/telephone"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_alignLeft="@+id/mail"

                android:layout_alignStart="@+id/mail"

                android:layout_below="@+id/mail"

                android:text="textview"

                android:textSize="20dp"

                android:textStyle="bold" />

            <TextView

                android:id="@+id/textview"

                android:layout_width="80dp"

                android:layout_height="wrap_content"

                android:layout_alignBaseline="@+id/date_pub"

                android:layout_alignBottom="@+id/date_pub"

                android:layout_alignLeft="@+id/description"

                android:layout_alignStart="@+id/description"

                android:text="Publié le " />

            <TextView

                android:id="@+id/date_pub"

                android:layout_width="220dp"

                android:layout_height="wrap_content"

                android:layout_below="@+id/description"

                android:layout_marginTop="12dp"

                android:layout_toEndOf="@+id/textview"

                android:layout_toRightOf="@+id/textview"

                android:text="TextView" />

            <TextView

                android:id="@+id/description"

                android:layout_width="300dp"

                android:layout_height="wrap_content"

                android:layout_alignLeft="@+id/prix"

                android:layout_alignStart="@+id/prix"

                android:layout_below="@+id/prix"

                android:layout_marginTop="20dp"

                android:text="TextView" />

            <TextView

                android:id="@+id/codePostal"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_above="@+id/description"
                android:layout_toEndOf="@+id/textview"
                android:layout_toRightOf="@+id/textview"
                android:text="TextView" />

            <TextView

                android:id="@+id/Titre"

                android:layout_width="300dp"

                android:layout_height="wrap_content"

                android:layout_alignLeft="@+id/image_annonce"

                android:layout_alignParentTop="true"

                android:layout_alignStart="@+id/image_annonce"

                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"

                android:text="Vends Ordinateur HP"

                android:textSize="24dp"

                android:textStyle="bold" />


            <com.daimajia.slider.library.SliderLayout xmlns:android="http://schemas.android.com/apk/res/android"


                android:id="@+id/image_annonce"

                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"

                android:layout_height="200dp"

                android:layout_below="@+id/Titre"

                android:layout_centerHorizontal="true"

                />

            <TextView

                android:id="@+id/prix"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_alignLeft="@+id/image_annonce"

                android:layout_alignStart="@+id/image_annonce"

                android:layout_below="@+id/image_annonce"

                android:layout_marginTop="18dp"

                android:text="TextView" />

            <TextView

                android:id="@+id/nom"

                android:layout_width="200dp"

                android:layout_height="wrap_content"

                android:layout_alignEnd="@+id/date_pub"

                android:layout_alignRight="@+id/date_pub"

                android:layout_below="@+id/date_pub"

                android:text="textview"

                android:textSize="20dp"

                android:textStyle="bold" />

            <TextView

                android:id="@+id/contacter"

                android:layout_width="90dp"

                android:layout_height="wrap_content"

                android:layout_alignLeft="@+id/textview"

                android:layout_alignStart="@+id/textview"

                android:layout_below="@+id/textview"

                android:text="Contacter"

                android:textSize="20dp"

                android:textStyle="bold" />

            <TextView

                android:id="@+id/textView"

                android:layout_width="10dp"

                android:layout_height="wrap_content"

                android:layout_above="@+id/description"

                android:layout_toEndOf="@+id/prix"

                android:layout_toRightOf="@+id/prix"

                android:text="€"

                android:textStyle="bold" />

            <TextView

                android:id="@+id/ville"

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:layout_alignBaseline="@+id/codePostal"
                android:layout_alignBottom="@+id/codePostal"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/codePostal"
                android:layout_toRightOf="@+id/codePostal"
                android:text="TextView" />


        </RelativeLayout>
    </ScrollView>


</RelativeLayout>